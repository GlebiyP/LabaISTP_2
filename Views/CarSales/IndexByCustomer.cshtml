@model IEnumerable<LabaISTP_2.CarSale>

@{
    ViewData["Title"] = "CarSales";
}

<h1>Продажі авто покупця @ViewBag.CustomerName</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Seller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.SellerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Brand.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CarSaleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CarSaleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CarSaleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
